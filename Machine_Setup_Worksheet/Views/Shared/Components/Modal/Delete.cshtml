@model Guid
@*Dialog box to create new Jaw *@
<div class="modal fade" id="DeleteModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog custom-dialog">
        <div class="modal-dialog custom-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalLabel">Delete Jaw</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    @if (ViewBag.Errors != null)
                    {
                        <div class="text-danger">
                            <ul>
                                @foreach (string error in ViewBag.Errors)
                                {
                                    <li>@error</li>
                                }
                            </ul>
                        </div>

                    }
                    @if (ViewBag.jaw != null)
                    {

                        <form action="/Jaws/Delete" method="post" id="DeleteForm">
                            <div class="mb-3">
                                <p>Are you sure you want to delete this Jaw</p>
                                <input type="hidden" name="JawId" value="@Model" />
                                <div class="modal-footer pb-0">
                                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                                    <button type="submit" class="btn btn-danger">Delete</button>
                                </div>
                            </div>
                        </form>
                    }
                    else if (ViewBag.machine != null)
                    {

                        <form action="/machines/Delete" method="post" id="DeleteForm">
                            <div class="mb-3">
                                <p>Are you sure you want to delete this Machine</p>
                                <input type="hidden" name="MachineId" value="@Model" />
                                <div class="modal-footer pb-0">
                                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                                    <button type="submit" class="btn btn-danger">Delete</button>
                                </div>
                            </div>
                        </form>
                    }
                    else if (ViewBag.setup != null)
                    {
                        <form action="" method="post" id="DeleteForm">
                            <div class="mb-3">
                                <p>Are you sure you want to delete this Setup</p>
                                <input type="hidden" name="SetupId" value="@Model" />
                                <div class="modal-footer pb-0">
                                    <a type="button" class="btn btn-secondary" data-bs-dismiss="modal" asp-action="Detail" asp-controller="WorkSetup" asp-route-Id="@Model">Close</a>
                                    <button type="submit" class="btn btn-danger">Delete</button>
                                </div>
                            </div>
                        </form>
                    }
                </div>

            </div>
        </div>
    </div>
</div>

