@model object
@*Dialog box to create new Jaw *@
<div class="modal fade" id="DeleteModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog custom-dialog">
        <div class="modal-dialog custom-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalLabel">Delete</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    @if (ViewBag.Errors != null)
                    {
                        <div class="text-danger">
                            <ul>
                                @foreach (string error in ViewBag.Errors)
                                {
                                    <li>@error</li>
                                }
                            </ul>
                        </div>

                    }
                    @if (!string.IsNullOrWhiteSpace((Model as JawsDTO)?.JawName))
                    {
                        JawsDTO? jawDTO = Model as JawsDTO;
                        <form asp-action="Delete" asp-controller="Jaws" method="post" id="DeleteForm">
                            <div class="mb-3">
                                <p>Are you sure you want to delete this Jaw</p>
                                <input type="hidden" name="JawId" value="@jawDTO?.JawId" />
                                <div class="modal-footer pb-0">
                                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                                    <button type="submit" class="btn btn-danger">Delete</button>
                                </div>
                            </div>
                        </form>
                    }
                    else if (!string.IsNullOrWhiteSpace((Model as MachineDTO)?.MachineName))
                    {
                        MachineDTO? machineDTO = Model as MachineDTO;
                        <form asp-action="Delete" asp-controller="Machine" method="post" id="DeleteForm">
                            <div class="mb-3">
                                <p>Are you sure you want to delete this Machine</p>
                                <input type="hidden" name="MachineId" value="@machineDTO?.MachineId" />
                                <div class="modal-footer pb-0">
                                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                                    <button type="submit" class="btn btn-danger">Delete</button>
                                </div>
                            </div>
                        </form>
                    }
                    else if (!string.IsNullOrWhiteSpace((Model as SetupDTO)?.Toothinfo))
                    {
                        SetupDTO? setupDTO = Model as SetupDTO;
                        <form action="/setup/@setupDTO?.WorkSetupId/delete/@setupDTO?.SetupId" method="post" id="DeleteForm">
                            <div class="mb-3">
                                <p>Are you sure you want to delete this Setup</p>
                                <input type="hidden" name="SetupId" value="@setupDTO?.SetupId" />
                                <div class="modal-footer pb-0">
                                    <a type="button" class="btn btn-secondary" data-bs-dismiss="modal" asp-action="Detail" asp-controller="WorkSetup" asp-route-Id="@Model">Close</a>
                                    <button type="submit" class="btn btn-danger">Delete</button>
                                </div>
                            </div>
                        </form>
                    }
                    else if (!string.IsNullOrWhiteSpace( (Model as WorkSetupDTO)?.WorkSetupName))
                    {
                        WorkSetupDTO? workSetupDTO = Model as WorkSetupDTO;
                        <form asp-action="Delete" asp-controller="WorkSetup" method="post" id="DeleteForm">
                            <div class="mb-3">
                                <p>Are you sure you want to delete this Work Setup</p>
                                <input type="hidden" name="WorkSetupId" value="@workSetupDTO?.WorkSetupId" />
                                <div class="modal-footer pb-0">
                                    <a type="button" class="btn btn-secondary" data-bs-dismiss="modal" asp-action="Detail" asp-controller="WorkSetup" asp-route-Id="@Model">Close</a>
                                    <button type="submit" class="btn btn-danger">Delete</button>
                                </div>
                            </div>
                        </form>
                    }
                </div>

            </div>
        </div>
    </div>
</div>

