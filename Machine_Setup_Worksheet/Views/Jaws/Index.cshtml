@model IEnumerable<Jaw>;
@{
    ViewBag.Title = "Jaws";
}

<div class="w-75 mx-auto">
<h1 class="my-4 text-center">Jaws Management</h1>
<div class="d-flex justify-content-end mb-3">
    <a asp-action="Create" asp-controller="Jaws" class="btn btn-primary" id="createButton">Create Jaw</a>
</div>

<table class="table table-bordered">
    <thead class="thead-dark">
        <tr>
            <th scope="col" class="jaws-name">Jaws Name</th>
            <th scope="col" class="jaws-action">Actions</th>
        </tr>
    </thead>
    <tbody>
        <!-- Sample row -->
        @foreach(Jaw jaw in Model){
            <tr>
            <td>@jaw.JawName</td>
            <td>
                <button class="btn btn-warning btn-sm me-2" href="#">Edit</button>
                <button class="btn btn-danger btn-sm">Delete</button>
            </td>
        </tr>
        }
        
        <!-- Add more rows as needed -->
    </tbody>
</table>
    </div>
