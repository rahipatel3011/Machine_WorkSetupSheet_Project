@model WorkSetupDTO

@{
    ViewBag.Title = "Save Work Setup";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow-lg">
                <div class="card-header bg-primary text-white">
                    <h4 class="mb-0">Work Setup</h4>
                </div>
                <div class="card-body">
                    <form asp-action="Save" asp-Controller="WorkSetup" method="post">
                        @if(Model != null)
                        {
                            <input type="hidden" asp-for="WorkSetupId" />
                        }
                        <div class="mb-3">
                            <label for="WorkSetupName" class="form-label">Setup Name</label>
                            <input type="text" class="form-control" asp-for="WorkSetupName" placeholder="Enter Setup Name">
                            <span asp-validation-for="WorkSetupName" class="text-danger"></span>
                        </div>
                        <div class="mb-3">
                            <label for="WorkSetupCode" class="form-label">Drawing Number</label>
                            <input type="text" class="form-control" asp-for="WorkSetupCode" placeholder="Enter Drawing Number">
                            <span asp-validation-for="WorkSetupCode" class="text-danger"></span>
                        </div>
                        <div class="mb-3">
                            <label for="CompanyName" class="form-label">Company Name</label>
                            <input type="text" class="form-control" asp-for="CompanyName" placeholder="Enter Company Name">
                            <span asp-validation-for="CompanyName" class="text-danger"></span>
                        </div>


                        <div class="mb-3">
                            <label asp-for="MachineId" class="form-label">Machines</label>
                            <select asp-for="MachineId" asp-items="@ViewBag.Machine" class="form-select">
                                <option selected disabled>please select machine</option>
                            </select>
                        </div>

                        <div class="mb-3">
                            <label for="Note" class="form-label">Note</label>
                            <textarea class="form-control" asp-for="Note" placeholder="Enter any notes"></textarea>
                            <span asp-validation-for="Note" class="text-danger"></span>
                        </div>
                        <div class="d-flex justify-content-center">
                            <button type="submit" class="btn btn-primary m-2">Save</button>
                            <a asp-action="Index" class="btn btn-secondary m-2">Cancel</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
